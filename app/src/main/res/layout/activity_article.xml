<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_selected_news"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:layout_margin="15sp"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/image_empty"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/textView_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textAlignment="textStart"
        android:layout_toEndOf="@id/image_selected_news"
        android:layout_marginTop="45sp"
        android:layout_marginEnd="15sp"/>

    <TextView
        android:id="@+id/textView_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textAlignment="textStart"
        android:layout_toEndOf="@id/image_selected_news"
        android:layout_marginTop="95sp"
        android:layout_marginEnd="15sp"/>

    <TextView
        android:id="@+id/textView_publishedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:layout_toEndOf="@id/image_selected_news"
        android:layout_marginTop="145sp"
        android:layout_marginEnd="15sp"/>

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:layout_below="@id/image_selected_news"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textView_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:text="TextView"
        android:textColor="@color/colorGray"
        android:textSize="15sp"
        android:layout_below="@id/textView_title"
        android:layout_centerHorizontal="true"
        android:textAlignment="textStart"/>
    <TextView
        android:id="@+id/textView_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:text="TextView"
        android:textSize="15sp"
        android:layout_below="@id/textView_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="textStart"
        android:autoLink="web"/>
</RelativeLayout>